{
	"name": "vscode-gradle-ext",
	"displayName": "Extend Gradle for Java extention",
	"icon": "images/icon.png",
	"description": "Extends Gradle for Java VSCode extension",
	"version": "1.0.36",
	"license": "LICENSE.md",
	"publisher": "sandipchitale",
    "author": {
        "name": "Sandip Chitale"
    },
    "maintainers": [
        "Sandip Chitale <sandipchitale@gmail.com>"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/sandipchitale/vscode-gradle-ext"
    },
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other",
		"Linters",
		"Visualization"
	],
	"extensionDependencies": [
		"vscjava.vscode-gradle"
	],
	"activationEvents": [
        "onCommand:vscode-gradle-ext.dependencyUpdates",
        "onCommand:vscode-gradle-ext.explorer",
        "onCommand:vscode-gradle-ext.groovysh",
        "onCommand:vscode-gradle-ext.tiOrder",
        "onCommand:vscode-gradle-ext.tiTree",
        "onCommand:vscode-gradle-ext.copyName",
        "onCommand:vscode-gradle-ext.copyPath",
        "onCommand:vscode-gradle-ext.helpTask",
        "onCommand:vscode-gradle-ext.dependencyInsight",
        "onCommand:vscode-gradle-ext.dependenciesConfiguration",
        "onCommand:vscode-gradle-ext.copyLabel"
	],
	"main": "./out/extension.js",
	"preview": true,
	"contributes": {
		"commands": [
			{
				"command": "vscode-gradle-ext.dependencyUpdates",
				"title": "Dependency Updates Report",
				"icon": "$(request-changes)"
			},
			{
				"command": "vscode-gradle-ext.explorer",
				"title": "Explorer",
				"icon": "$(folder-opened)"
			},
			{
				"command": "vscode-gradle-ext.groovysh",
				"title": "Start groovysh in project context",
				"icon": "$(debug-console)"
			},
			{
				"command": "vscode-gradle-ext.tiOrder",
				"title": "Task order",
				"icon": "$(list-ordered)"
			},
			{
				"command": "vscode-gradle-ext.tiTree",
				"title": "Task tree",
				"icon": "$(list-tree)"
			},
			{
				"command": "vscode-gradle-ext.copyName",
				"title": "Copy Name",
				"icon": "$(breakpoints-activate)"
			},
			{
				"command": "vscode-gradle-ext.copyPath",
				"title": "Copy Path",
				"icon": "$(explorer-view-icon)"
			},
			{
				"command": "vscode-gradle-ext.helpTask",
				"title": "help --task"
			},
			{
				"command": "vscode-gradle-ext.dependencyInsight",
				"title": "dependencyInsight (Dependency node only)"
			},
			{
				"command": "vscode-gradle-ext.dependenciesConfiguration",
				"title": "dependencies --configuration <configuration name>"
			},
			{
				"command": "vscode-gradle-ext.copyLabel",
				"title": "Copy label"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vscode-gradle-ext.groovysh",
					"when": "view =~ /^gradleTasksView$/",
					"group": "navigation"
				},
				{
					"command": "vscode-gradle-ext.explorer",
					"when": "view =~ /^gradleTasksView$/",
					"group": "navigation"
				},
				{
					"command": "vscode-gradle-ext.dependencyUpdates",
					"when": "view =~ /^gradleTasksView$/",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-gradle-ext.copyName",
					"when": "view =~ /^gradleTasksView$|^pinnedTasksView$|^recentTasksView$|^gradleDefaultProjectsView$/ && viewItem =~ /^debugTask(WithTerminals)?$|^task(WithTerminals)?$/",
					"group": "z_0@1"
				},
				{
					"command": "vscode-gradle-ext.copyPath",
					"when": "view =~ /^gradleTasksView$|^pinnedTasksView$|^recentTasksView$|^gradleDefaultProjectsView$/ && viewItem =~ /^debugTask(WithTerminals)?$|^task(WithTerminals)?$/",
					"group": "z_0@2"
				},
				{
					"command": "vscode-gradle-ext.helpTask",
					"when": "view =~ /^gradleTasksView$|^pinnedTasksView$|^recentTasksView$|^gradleDefaultProjectsView$/ && viewItem =~ /^debugTask(WithTerminals)?$|^task(WithTerminals)?$/",
					"group": "z_0@3"
				},
				{
					"command": "vscode-gradle-ext.tiOrder",
					"when": "view =~ /^gradleTasksView$|^pinnedTasksView$|^recentTasksView$|^gradleDefaultProjectsView$/ && viewItem =~ /^debugTask(WithTerminals)?$|^task(WithTerminals)?$/",
					"group": "z_0@4"
				},
				{
					"command": "vscode-gradle-ext.tiTree",
					"when": "view =~ /^gradleTasksView$|^pinnedTasksView$|^recentTasksView$|^gradleDefaultProjectsView$/ && viewItem =~ /^debugTask(WithTerminals)?$|^task(WithTerminals)?$/",
					"group": "z_0@5"
				},
				{
					"command": "vscode-gradle-ext.dependencyInsight",
					"when": "view =~ /^gradleTasksView$/",
					"group": "z_0@6"
				},
				{
					"command": "vscode-gradle-ext.dependenciesConfiguration",
					"when": "view =~ /^gradleTasksView$/",
					"group": "z_0@7"
				},
				{
					"command": "vscode-gradle-ext.copyLabel",
					"when": "view =~ /^gradleTasksView$/",
					"group": "z_0@8"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
